<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.collegeadmissionsapplication">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.CollegeAdmissionsApplication">
        <activity
            android:name=".UI.Sign.SignInActivity"
            android:exported="false" />
        <activity
            android:name=".UI.Sign.SignUpActivity"
            android:exported="false" />
        <activity
            android:name=".UI.FlashScreen.WelcomeActivity"
            android:exported="false" />
        <activity
            android:name=".UI.Activities.UserInforActivity"
            android:exported="false" />
        <activity
            android:name=".UI.Activities.ScoreExamAdmissionActivity"
            android:exported="false" />
        <activity
            android:name=".UI.Activities.SchoolProfileActivity"
            android:exported="false" />
        <activity
            android:name=".UI.Activities.CompetencyAssessmentActivity"
            android:exported="false" />
        <activity
            android:name=".UI.Activities.AdmissionMethodActivity"
            android:exported="false" />
        <activity
            android:name=".UI.Activities.ProfileActivity"
            android:exported="false" />
        <activity
            android:name=".UI.Activities.HomeActivity"
            android:exported="false" />
        <activity
            android:name=".UI.FlashScreen.FlashScreenActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Scan.Capture"
            android:screenOrientation="fullSensor"
            android:stateNotNeeded="true"
            android:theme="@style/zxing_CaptureTheme" />
    </application>

</manifest>